{
  "name": "Bilibili 动态提醒",
  "description": "获取我的B站UP主动态更新数量提醒",
  "version": "0.1.0",
  "manifest_version": 3,
  "minimum_chrome_version": "114",
  "icons": {
    "16": "icons/bilibili_icon16.ico",
    "32": "icons/bilibili_icon32.ico",
    "48": "icons/bilibili_icon48.ico",
    "128": "icons/bilibili_icon128.ico"
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.bilibili.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.bilibili.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "src/options.html",
  "action": {
    "default_title": "Bilibili 动态提醒"
  }
}